<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.Expense.Planner.Profile">

    <Button
        android:text="Logout"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="send"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_marginStart="11dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:text=","
        android:textSize="32dp"
        android:layout_alignBottom="@+id/focus"
        android:layout_toEndOf="@+id/focus"
        android:layout_marginStart="13dp" />

    <TextView
        android:text="Welcome to Expense planner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:textSize="20dp"
        android:id="@+id/focus"
        android:text="textview"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:id="@+id/expense"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:onClick="expenses"
        android:text="Expense"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/settle" />

    <Button
        android:id="@+id/settle"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:onClick="settlement"
        android:text="Settlement"
        android:layout_below="@+id/expense"
        android:layout_alignStart="@+id/summary"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/summary"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:onClick="summary"
        android:text="summary_report"
        android:layout_below="@+id/settle"
        android:layout_alignStart="@+id/detailed"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/detailed"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Detailed Report"
        android:layout_below="@+id/summary"
        android:layout_alignStart="@+id/occasion" />

    <Button
        android:id="@+id/occasion"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Occasional Report"
        android:onClick="ocrep"
        android:layout_below="@+id/detailed"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
